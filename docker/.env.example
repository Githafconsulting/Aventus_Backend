# Docker Compose Environment Variables
# Copy this file to .env and fill in your values

# Database (use local postgres or Supabase)
DATABASE_URL=postgresql://aventus:aventus_dev_password@postgres:5432/aventus

# Security
SECRET_KEY=your-super-secret-key-at-least-32-characters

# Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key

# Supabase (for file storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3000

# Optional: Override for production
# ENVIRONMENT=production
# LOG_LEVEL=WARNING
